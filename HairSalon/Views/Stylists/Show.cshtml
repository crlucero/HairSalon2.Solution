@{
  Layout = "_Layout";
}

<div class="container">

<h3>Here are all the clients who currently go to @Model["stylist"].GetName()!</h3>
@if (@Model["clients"].Count == 0)
{
  <h4>This stylist does not have any clients yet!</h4>
}

<ol>
@foreach (var client in @Model["clients"])
{
  <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetName()</a></li>
}
</ol>

<h4>Specialties</h4>
@foreach (var specialty in Model["specialties"])
{
    <li>@specialty.GetSpecialtyName()</li>
}

<h4>Add a specialty to this stylist.</h4>

<form action="/stylists/@Model["stylist"].GetId()/specialty/new" method="post">
    <select name="specialtyId" >
            @foreach(var specialty in @Model["allspecialties"])
            {
                <option class="dropdown-item" value=@specialty.GetId()>@specialty.GetSpecialtyName()</option>
            }
    </select>
     <button class="btn btn-primary btn-md" type="submit">Add</button>
</form>


<p><a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add a new client!</a></p>

<p><a href='/stylists'>Return to stylist list</a></p>
<p><a href='/'>Return to Main Page</a></p>

</div>